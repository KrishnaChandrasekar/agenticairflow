FROM python:3.11-slim
RUN apt-get update && apt-get install -y --no-install-recommends sqlite3 jq ca-certificates && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY router/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY router/ .
EXPOSE 8000
ENV DB_URL=sqlite:///db.sqlite
CMD ["python","app.py"]
